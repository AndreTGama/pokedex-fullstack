generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teams {
  @@map("teams")

  id                  String             @id @default(uuid())
  name                String
  created_at          DateTime           @default(now())
  updated_at          DateTime           @updatedAt()
  deleted_at          DateTime?
  
  teamsHasPokemons    TeamsHasPokemons[] @relation(name: "teams_pokemon")
}

model TeamsHasPokemons {
  @@map("teams_has_pokemons")

  id          String      @id @default(uuid())
  teamsId     String    
  pokemonId   String      
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt()
  deleted_at  DateTime?

  teams       Teams       @relation(name: "teams_pokemon", fields: [teamsId], references: [id], onDelete: Cascade)
  Pokemon     Pokemons    @relation(name: "pokemon_teams", fields: [pokemonId], references: [id], onDelete: Cascade)
}

model Pokemons {
  @@map("pokemons")

  id          String                 @id @default(uuid())
  name        String    
  img         String
  id_pokedex  Int
  created_at  DateTime               @default(now())
  updated_at  DateTime               @updatedAt()
  deleted_at  DateTime?

  teamsHasPokemons TeamsHasPokemons[] @relation(name: "pokemon_teams")
}