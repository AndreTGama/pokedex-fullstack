generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teams {
  @@map("teams")

  id                  String            @id @default(uuid())
  name                String
  teamsHasPokemons    TeamsHasPokemons[] @relation(name: "teams_pokemon")
  created_at          DateTime          @default(now())
  updated_at          DateTime          @updatedAt()
}

model TeamsHasPokemons {
  @@map("teams_has_pokemons")

  id          String    @id @default(uuid())
  teamsId     String    
  pokemonId   Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt()
  Teams       Teams     @relation(name: "teams_pokemon", fields: [teamsId], references: [id], onDelete: Cascade)
}
